        }

        .justify-between {
            justify-content: space-between;
        }

        .logo-icon {
            width: 20px;
            height: 20px;
        }

        .logo-text {
            font-size: 16px;
            margin: 1.5px 0px 0px 10px;
        }

        .header-address {
            font-size: 12px;
            font-weight: bold;
            margin: 6px 0px 0px 10px;
        }

        .footer-description {
            font-size: 12px;
            font-weight: bold;
            margin: 10px 0px 0px 0px;
            color: rgb(0, 94, 255);
        }

        .footer-doc-name {
            font-size: 12px;
            font-weight: bold;
            margin: 10px 0px 0px 0px;
        }

        .footer-grey-text {
            color: #626e99;
        }

        .grad-hr {
            background: rgb(0, 94, 255);
            background: linear-gradient(90deg, rgba(0, 94, 255, 1) 0%, rgba(33, 221, 255, 1) 100%);
            height: 2px;
            border-width: 0;
        }

        .marker-separator {
            margin: 15px 0px 0px 0px;
        }

        .marker-icon {
            width: 20px;
            height: 20px;
            margin-right: 10px;
        }

        .marker-text {
            font-size: 14px;
            font-weight: 400;
            margin: 1.5px 0px 0px 2px;
        }

        .marker-hr {
            background: rgb(0, 94, 255);
            background: linear-gradient(90deg, rgba(0, 94, 255, 1) 0%, rgba(33, 221, 255, 1) 100%);
            height: 2px;
            border-width: 0;
            width: 100%;
            margin: 10px 0px 0px 12px;
        }

        .chart-box {
            margin: 10px 0px 0px 0px;
        }

        .chart-box-header {
            height: 24px;
            background-color:#e8eefb;
            border-radius: 12.76px 12.76px 0px 0px;
        }

        .chart-box-content {
            background-color: #f1f3f4;
