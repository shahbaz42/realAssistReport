                <div class="marker-hr" style="width:100vw"></div>

            </div>
        </div>

        <div class="chart-box">
            <div class="chart-box-header">
            </div>
            <div class="chart-box-content">
                <div class="chart-container">
                    <canvas id="myChart"></canvas>
                </div>
            </div>
        </div>

        <div id="footer" onchange="onChange(this)">
            <div class="grad-hr"></div>
            <div class="flex justify-between">
                <div class="flex justify-center">
                    <p class="footer-description">Report Generated on September 26, 2023</p>
                </div>
                <div>
                    <p class="footer-doc-name">RealAssist Property Report | Page <span class="pageNumber"></span> <span
                            class="footer-grey-text">of <span class="totalPages"></span></span></p>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>

        const Utils = {
            months: ({ count }) => {
                const monthNames = [
                    'January', 'February', 'March', 'April', 'May', 'June', 'July'
                ];

                return monthNames.slice(0, count);
            },
            numbers: ({ count, min, max }) => {
                const randomNumbers = [];
                for (let i = 0; i < count; i++) {
                    randomNumbers.push(Math.floor(Math.random() * (max - min + 1) + min));
                }

                return randomNumbers;
            },
            CHART_COLORS: {
                red: 'red',
                blue: 'blue',
            },
        };

        const DATA_COUNT = 7;
        const NUMBER_CFG = { count: DATA_COUNT, min: -100, max: 100 };

        const labels = Utils.months({ count: 7 });
        const data = {
            labels: labels,
            datasets: [
                {
                    label: 'Dataset 2',
                    data: Utils.numbers(NUMBER_CFG),
                    borderColor: "#1463ff",
                    backgroundColor: "#ffffff",
                }
            ]
        };

        const config = {
            type: 'line',
            data: data,
            options: {
                responsive: true,
                animation: false,
                plugins: {
                    legend: {
                        position: 'bottom',
                    },
                    title: {
                        display: true,
                        text: 'Chart.js Line Chart'
                    }
                }
            },
        };

        const myChart = new Chart(
            document.getElementById('myChart'),
            config
        );
    </script>
</body>

</html>